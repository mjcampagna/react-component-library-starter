{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "es6", "es2016", "es2017"],
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "es5",
  },
  "exclude": [
    ".vscode",
    "dist",
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ],
}
